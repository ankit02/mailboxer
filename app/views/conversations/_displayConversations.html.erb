
		<%#= link_to 'Move to trash', trash_conversation_path(inbox.id), :method => :post %>
		<%#= inbox.created_at %>
		<%# currentTime = %>

	<table border = '0'>
		<tr>
			<th></th>
			<th width = "200px">Sender</th>
			<th width = "200px", align = "center">Subject</th>
			<th width = "200px"></th>
			<th width = "200px"> </th> 
		</tr>
			<% @convs.each do |conv| %>
				<% bold = false %>
				<% conv.receipts.each do |receipt| %>
					<% if !receipt.is_read? && receipt.receiver_id == current_user.id %>
						<% bold = true %>
						<% break %>
					<% end %>
				<% end %>
			<tr> 
				<td> </td> 
				<td>
					<% if bold %>
						<b> <%= link_to conv.last_sender.email, conversation_path(conv.id)  %> </b>
					<% else %> 
						<%= link_to conv.last_sender.email, conversation_path(conv.id)  %>
					<% end %> 
				</td> 
				<td align = "center"> 
					<% if bold %>
						<b> <%= link_to conv.subject, conversation_path(conv.id)  %> </b>
					<% else %> 
						<%= link_to conv.subject, conversation_path(conv.id)  %>
					<% end %>
				</td>
				<td > </td>
			
				<td align = "center">
					<div style = "float:right; color:grey; font-size:14px; font-style:italic">
						<%= time_ago_in_words(conv.last_message.created_at) %> ago
					</div>
				</td>

			</tr>
			<% end %>


			


	</table>


<%# end %>
