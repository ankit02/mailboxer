<%= form_for :message, url:[:reply, conversation] do |f| %>

	<%#= f.label :subject %>
	<%#= f.text_field :subject %>

	<div style="float:left;"><%= f.text_area :body, :cols=>28, :rows=>3, :placeholder=>'Type your message here' %></div>

	<div style="float:left;"><%= f.submit 'Reply' %></div>

<% end %>