<p> Start a new Conversation

	<%= link_to 'Start Conversation', :new_conversation %>

<p>
<h2> Inbox </h2>

<% @inbox.each do |inbox| %>
	<p> Inbox Subject <%= link_to inbox.subject, conversation_path(inbox.id)  %>
		<%= link_to 'Move to trash', trash_conversation_path(inbox.id), :method => :post %>
<% end %>
 
<h2> Sentbox </h2>
<p> <% @sentbox.each do |sentbox| %>
	<p> Sentbox Subject <%= link_to sentbox.subject, conversation_path(sentbox.id)  %>
		<%= link_to 'Move to trash', trash_conversation_path(sentbox.id), :method => :post %>

	<% end %>
<h2> Trash </h2>
<p> <% @trash.each do |trash| %>
	<p> Trash Subject <%= link_to trash.subject, conversation_path(trash.id)  %>
		<%= link_to 'untrash', untrash_conversation_path(trash.id), :method => :post %>

	<% end %>