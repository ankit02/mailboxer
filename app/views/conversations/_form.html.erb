<%= form_for :conversation, :url => {:action => :create} do |f| %>

<%= f.label :subject, 'Subject' %>
<%= f.text_field :subject %>

<%= f.label :body %>
<%= f.text_field :body %>

<%= f.label :recipients %>
<%= f.text_field :recipients %>

<%= f.submit 'Send message' %>
<%= f.submit 'Cancel', type: :reset %>
<% end %>